<div class="new_post_container">
<div class="new-post">
<div class="container" style="color: white">
<h1>New Post</h1>
</div>
<%= form_for :post, url: posts_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>

    <p>
    <%= f.label :body %><br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    
    <p>
    <%= f.submit %>
    </p>
<% end %>
</div>
</div>